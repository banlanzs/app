<UserControl x:Class="Stratum.Desktop.Controls.CategoryFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <!-- Filter Toggle Button -->
        <ToggleButton x:Name="FilterToggleButton" 
                      Style="{StaticResource FilterButtonStyle}"
                      ToolTip="Filter by category">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding CurrentCategoryName, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <Path x:Name="DropdownArrow"
                      Data="M0,0 L4,4 L8,0 Z" 
                      Fill="{StaticResource TextSecondaryBrush}"
                      VerticalAlignment="Center"
                      RenderTransformOrigin="0.5,0.5">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="ArrowRotation" Angle="0"/>
                    </Path.RenderTransform>
                </Path>
            </StackPanel>
        </ToggleButton>
        
        <!-- Category Dropdown Popup -->
        <Popup x:Name="CategoryPopup" 
               IsOpen="{Binding IsChecked, ElementName=FilterToggleButton}"
               PlacementTarget="{Binding ElementName=FilterToggleButton}"
               Placement="Bottom"
               AllowsTransparency="True"
               StaysOpen="False"
               PopupAnimation="Slide">
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource OutlineVariantBrush}" 
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="0"
                    MinWidth="{Binding ActualWidth, ElementName=FilterToggleButton}"
                    Effect="{StaticResource DropShadowEffect}">
                <ItemsControl ItemsSource="{Binding Categories, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name, FallbackValue='Unknown'}" 
                                    Command="{Binding DataContext.SelectCategoryCommand, 
                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource CategoryMenuItemStyle}"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    ToolTip="{Binding Name, FallbackValue='Select this category'}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Popup>
    </Grid>

</UserControl>