<UserControl x:Class="Stratum.Desktop.Controls.NavigationRail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="80"
             Background="{StaticResource SurfaceBrush}">

    <Border BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="0,1,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Settings Button (was Menu) -->
            <Button x:Name="SettingsButton"
                    Grid.Column="0"
                    Style="{StaticResource BottomNavButtonStyle}"
                    Click="SettingsButton_Click"
                    ToolTip="{DynamicResource Settings}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#x2699;" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Settings" FontSize="10" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Search Button -->
            <Button x:Name="SearchButton"
                    Grid.Column="1"
                    Style="{StaticResource BottomNavButtonStyle}"
                    Click="SearchButton_Click"
                    ToolTip="Search">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#x1F50D;" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Search" FontSize="10" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- FAB Add Button -->
            <Button x:Name="AddButton"
                    Grid.Column="2"
                    Style="{StaticResource FABStyle}"
                    Click="AddButton_Click"
                    ToolTip="{DynamicResource Add}">
                <TextBlock Text="+" FontSize="24" FontWeight="Bold" Foreground="White"/>
            </Button>

            <!-- Categories Button -->
            <Button x:Name="CategoriesButton"
                    Grid.Column="3"
                    Style="{StaticResource BottomNavButtonStyle}"
                    Click="CategoriesButton_Click"
                    ToolTip="{DynamicResource Categories}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#x1F4C1;" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Categories" FontSize="10" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- About Button (was More) -->
            <Button x:Name="AboutButton"
                    Grid.Column="4"
                    Style="{StaticResource BottomNavButtonStyle}"
                    Click="AboutButton_Click"
                    ToolTip="{DynamicResource About}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#x2139;" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="About" FontSize="10" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Border>
</UserControl>
