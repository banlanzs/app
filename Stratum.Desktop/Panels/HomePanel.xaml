<UserControl x:Class="Stratum.Desktop.Panels.HomePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:Stratum.Desktop.Behaviors"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Default Template (extracted from inline) -->
        <DataTemplate x:Key="DefaultAuthenticatorTemplate">
            <Border Style="{StaticResource MobileCardStyle}"
                    Margin="16,8,16,0"
                    Cursor="Hand"
                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="{DynamicResource CopyCode}" Command="{Binding CopyCodeCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <MenuItem Header="{DynamicResource Edit}" Command="{Binding EditAuthenticatorCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource AssignCategory}" Click="AssignCategory_Click"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource ShowQRCode}" Command="{Binding ShowQrCodeCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource Delete}" Command="{Binding DeleteAuthenticatorCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Foreground="Red"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="56"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                            Width="44" Height="44" CornerRadius="8"
                            Background="{StaticResource PrimaryBrush}"
                            VerticalAlignment="Center" Margin="0,0,16,0">
                        <Grid>
                            <Image Source="{Binding IconImage}" Width="28" Height="28"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding IconImage, Converter={StaticResource ImageVisibilityConverter}}"/>
                            <TextBlock Text="{Binding IssuerInitial}"
                                       FontSize="20" FontWeight="Medium"
                                       Foreground="{StaticResource OnPrimaryBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding IconImage, Converter={StaticResource ImageVisibilityConverter}, ConverterParameter=Invert}"/>
                        </Grid>
                    </Border>

                    <TextBlock Grid.Column="1" Grid.Row="0"
                               Text="{Binding Issuer}"
                               Style="{StaticResource BodyLargeStyle}"
                               FontWeight="Medium"/>

                    <TextBlock Grid.Column="1" Grid.Row="1"
                               Text="{Binding Username}"
                               Style="{StaticResource BodyStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Visibility="{Binding HasUsername, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <TextBlock Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"
                               Text="{Binding FormattedCode}"
                               FontSize="32" FontWeight="Medium"
                               FontFamily="Consolas, SF Mono, Monaco, Courier New"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,4,0,0"/>

                    <Grid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ProgressBar Grid.Column="0"
                                     Value="{Binding TimeRemaining, Mode=OneWay}"
                                     Maximum="{Binding Period, Mode=OneWay}"
                                     Style="{StaticResource TimerProgressStyle}"
                                     Visibility="{Binding IsTimeBased, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding TimeRemaining, StringFormat={}{0}s}"
                                   Style="{StaticResource LabelStyle}"
                                   Margin="12,0,0,0"
                                   Visibility="{Binding IsTimeBased, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Grid.Column="1"
                                Content="Refresh"
                                Command="{Binding DataContext.IncrementCounterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Visibility="{Binding IsCounterBased, Converter={StaticResource BoolToVisibilityConverter}}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="12,6"/>
                    </Grid>

                    <Button Grid.Column="2" Grid.Row="0"
                            x:Name="MoreMenuButton"
                            Style="{StaticResource IconButtonStyle}"
                            Width="28" Height="28"
                            Click="MoreMenuButton_Click"
                            Tag="{Binding}"
                            ToolTip="More options">
                        <Path Data="M12,8c1.1,0,2-0.9,2-2s-0.9-2-2-2-2,0.9-2,2S10.9,8,12,8z M12,10c-1.1,0-2,0.9-2,2s0.9,2,2,2s2-0.9,2-2S13.1,10,12,10z M12,16c-1.1,0-2,0.9-2,2s0.9,2,2,2s2-0.9,2-2S13.1,16,12,16z"
                              Fill="{StaticResource TextSecondaryBrush}"
                              Width="4" Height="16" Stretch="Uniform"/>
                        <Button.ContextMenu>
                            <ContextMenu x:Name="AuthenticatorContextMenu">
                                <MenuItem Header="{DynamicResource CopyCode}" Click="CopyCode_Click"/>
                                <MenuItem Header="{DynamicResource Edit}" Click="EditAuthenticator_Click"/>
                                <Separator/>
                                <MenuItem Header="{DynamicResource AssignCategory}" Click="AssignCategory_Click"/>
                                <Separator/>
                                <MenuItem Header="{DynamicResource ShowQRCode}" Click="ShowQrCode_Click"/>
                                <Separator/>
                                <MenuItem Header="{DynamicResource Delete}" Click="DeleteAuthenticator_Click" Foreground="Red"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <Border Grid.Column="2" Grid.Row="1"
                            Visibility="{Binding JustCopied, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="{StaticResource SuccessBrush}"
                            CornerRadius="4" Padding="8,4">
                        <TextBlock Text="{DynamicResource Copied}" Foreground="{StaticResource OnPrimaryBrush}" FontSize="11"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Compact Template -->
        <DataTemplate x:Key="CompactAuthenticatorTemplate">
            <Border Style="{StaticResource MobileCardStyle}" Margin="16,4,16,0" Padding="12,8"
                    Cursor="Hand" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="{DynamicResource CopyCode}" Command="{Binding CopyCodeCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <MenuItem Header="{DynamicResource Edit}" Command="{Binding EditAuthenticatorCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource ShowQRCode}" Command="{Binding ShowQrCodeCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource Delete}" Command="{Binding DeleteAuthenticatorCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Foreground="Red"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="32" Height="32" CornerRadius="6"
                            Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center">
                        <Grid>
                            <Image Source="{Binding IconImage}" Width="20" Height="20"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding IconImage, Converter={StaticResource ImageVisibilityConverter}}"/>
                            <TextBlock Text="{Binding IssuerInitial}" FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource OnPrimaryBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding IconImage, Converter={StaticResource ImageVisibilityConverter}, ConverterParameter=Invert}"/>
                        </Grid>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                        <TextBlock Text="{Binding Issuer}" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Username}" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Visibility="{Binding HasUsername, Converter={StaticResource BoolToVisibilityConverter}}"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FormattedCode}" FontSize="20"
                                   FontFamily="Consolas, SF Mono, Monaco, Courier New"
                                   FontWeight="Medium" Margin="0,0,12,0"/>
                        <TextBlock Text="{Binding TimeRemaining, StringFormat={}{0}s}"
                                   FontSize="11" VerticalAlignment="Center"
                                   Visibility="{Binding IsTimeBased, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Tile Template -->
        <DataTemplate x:Key="TileAuthenticatorTemplate">
            <Border Style="{StaticResource MobileCardStyle}" Margin="8" Padding="16"
                    Cursor="Hand" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="{DynamicResource CopyCode}" Command="{Binding CopyCodeCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <MenuItem Header="{DynamicResource Edit}" Command="{Binding EditAuthenticatorCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource ShowQRCode}" Command="{Binding ShowQrCodeCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource Delete}" Command="{Binding DeleteAuthenticatorCommand}"
                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Foreground="Red"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Width="48" Height="48" CornerRadius="12"
                            Background="{StaticResource PrimaryBrush}"
                            HorizontalAlignment="Center" Margin="0,0,0,12">
                        <Grid>
                            <Image Source="{Binding IconImage}" Width="32" Height="32"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding IconImage, Converter={StaticResource ImageVisibilityConverter}}"/>
                            <TextBlock Text="{Binding IssuerInitial}" FontSize="24" FontWeight="Medium"
                                       Foreground="{StaticResource OnPrimaryBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding IconImage, Converter={StaticResource ImageVisibilityConverter}, ConverterParameter=Invert}"/>
                        </Grid>
                    </Border>
                    <TextBlock Grid.Row="1" Text="{Binding Issuer}"
                               HorizontalAlignment="Center" TextAlignment="Center"
                               TextTrimming="CharacterEllipsis" FontWeight="Medium" Margin="0,0,0,8"/>
                    <TextBlock Grid.Row="2" Text="{Binding FormattedCode}" FontSize="24"
                               FontFamily="Consolas, SF Mono, Monaco, Courier New"
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <ProgressBar Grid.Row="3" Value="{Binding TimeRemaining, Mode=OneWay}"
                                 Maximum="{Binding Period, Mode=OneWay}" Height="4"
                                 Style="{StaticResource TimerProgressStyle}"
                                 Visibility="{Binding IsTimeBased, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="0,0,0,1"
                Padding="16,16,16,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="{Binding CurrentCategoryName}" 
                           Style="{StaticResource TitleLargeStyle}"
                           Margin="0,0,8,4"
                           VerticalAlignment="Center"/>

                <!-- Category Filter Button -->
                <Button Grid.Row="0" Grid.Column="1"
                        x:Name="CategoryFilterButton"
                        Style="{StaticResource IconButtonStyle}"
                        Width="Auto"
                        Padding="12,0"
                        Click="CategoryFilterButton_Click"
                        ToolTip="Filter by category"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M20,6h-8l-2-2H4C2.9,4,2.01,4.9,2.01,6L2,18c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V8C22,6.9,21.1,6,20,6z"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Width="18" Height="18" Stretch="Uniform" Margin="0,0,8,0"/>
                        <Path x:Name="FilterDropdownArrow"
                              Data="M0,0 L4,4 L8,0 Z" 
                              Fill="{StaticResource TextSecondaryBrush}"
                              VerticalAlignment="Center"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform x:Name="FilterArrowRotation" Angle="0"/>
                            </Path.RenderTransform>
                        </Path>
                    </StackPanel>
                    <Button.ContextMenu>
                        <ContextMenu x:Name="CategoryContextMenu">
                            <!-- Categories will be populated dynamically -->
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <!-- Menu Button with Sort Options -->
                <Button Grid.Row="0" Grid.Column="3"
                        x:Name="SortMenuButton"
                        Style="{StaticResource IconButtonStyle}"
                        Click="SortMenuButton_Click"
                        ToolTip="Sort options">
                    <Path Data="M3,18h6v-2H3V18z M3,6v2h18V6H3z M3,13h12v-2H3V13z"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Width="20" Height="20" Stretch="Uniform"/>
                    <Button.ContextMenu>
                        <ContextMenu x:Name="SortContextMenu">
                            <MenuItem Header="{DynamicResource SortByNameAsc}" Click="SortByNameAsc_Click"/>
                            <MenuItem Header="{DynamicResource SortByNameDesc}" Click="SortByNameDesc_Click"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource SortByCopyCountAsc}" Click="SortByCopyCountAsc_Click"/>
                            <MenuItem Header="{DynamicResource SortByCopyCountDesc}" Click="SortByCopyCountDesc_Click"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource SortCustomOrder}" Click="SortCustom_Click"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <!-- Search Box -->
                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        Background="{StaticResource SurfaceVariantBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0,12,0,0"
                        Padding="12,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <Path Grid.Column="0"
                              Data="M15.5,14h-.79l-.28-.27C15.41,12.59,16,11.11,16,9.5C16,5.91,13.09,3,9.5,3S3,5.91,3,9.5S5.91,16,9.5,16c1.61,0,3.09-.59,4.23-1.57l.27.28v.79l5,4.99L20.49,19l-4.99-5L15.5,14z M9.5,14C7.01,14,5,11.99,5,9.5S7.01,5,9.5,5S14,7.01,14,9.5S11.99,14,9.5,14z"
                              Fill="{StaticResource TextSecondaryBrush}"
                              Width="16" Height="16"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              Margin="0,0,12,0"/>

                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 KeyDown="SearchTextBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Background="Transparent"
                                                                  BorderThickness="0"
                                                                  IsTabStop="False"
                                                                  VerticalAlignment="Center"/>
                                                    <TextBlock Text="{DynamicResource Search}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Clear Button -->
                        <Button Grid.Column="2"
                                x:Name="ClearSearchButton"
                                Style="{StaticResource IconButtonStyle}"
                                Width="28" Height="28"
                                Click="ClearSearchButton_Click"
                                Visibility="{Binding SearchText, Converter={StaticResource BoolToVisibilityConverter}}"
                                ToolTip="Clear search">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41z"
                                  Fill="{StaticResource TextSecondaryBrush}"
                                  Width="12" Height="12" Stretch="Uniform"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Authenticator List -->
        <ListBox x:Name="AuthenticatorList"
                 Grid.Row="1"
                 ItemsSource="{Binding FilteredAuthenticators}"
                 SelectedItem="{Binding SelectedAuthenticator}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 VirtualizingPanel.CacheLength="1,1"
                 VirtualizingPanel.CacheLengthUnit="Page"
                 VirtualizingPanel.ScrollUnit="Pixel"
                 Padding="0,0,0,80"
                 behaviors:DragReorderBehavior.IsEnabled="True"
                 behaviors:DragReorderBehavior.ReorderCommand="{Binding ReorderAuthenticatorsCommand}"
                 behaviors:DragReorderBehavior.ClickCommand="{Binding CopyCodeCommand}"
                 AllowDrop="True">
            <ListBox.Style>
                <Style TargetType="ListBox">
                    <Setter Property="ItemTemplate" Value="{StaticResource DefaultAuthenticatorTemplate}"/>
                    <Setter Property="ItemsPanel">
                        <Setter.Value>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ItemContainerStyle" Value="{StaticResource AuthenticatorListItemStyle}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DisplayMode}" Value="Compact">
                            <Setter Property="ItemTemplate" Value="{StaticResource CompactAuthenticatorTemplate}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DisplayMode}" Value="Tile">
                            <Setter Property="ItemTemplate" Value="{StaticResource TileAuthenticatorTemplate}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ColumnLayout}" Value="Double">
                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2"/>
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ItemContainerStyle" Value="{x:Null}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.Style>
        </ListBox>

        <!-- Empty State -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{DynamicResource NoAuthenticators}"
                       Style="{StaticResource TitleLargeStyle}"
                       HorizontalAlignment="Center" Opacity="0.6"/>
            <TextBlock Text="{DynamicResource AddYourFirst}"
                       Style="{StaticResource BodyStyle}"
                       HorizontalAlignment="Center" Margin="0,8,0,0" Opacity="0.6"/>
        </StackPanel>
    </Grid>
</UserControl>


